# Docker Deployment Environment Variables
# Copy this file to .env and fill in your values

# MongoDB Atlas
MONGODB_URL=mongodb+srv://username:password@cluster.mongodb.net/devquery-prod?retryWrites=true&w=majority

# JWT Secret
JWT_SECRET=your_super_secret_jwt_key_minimum_32_characters_long

# OTP Mode
OTP_MODE=real

# Email Configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password
EMAIL_FROM=DevQuery <noreply@devquery.com>

# SMS Configuration
SMS_PROVIDER=twilio
SMS_ACCOUNT_SID=your_account_sid
SMS_AUTH_TOKEN=your_auth_token
SMS_SENDER_ID=+1234567890

# AI Configuration
HF_API_KEY=hf_your_huggingface_key
GEMINI_API_KEY=your_gemini_key

# URLs
FRONTEND_URL=http://localhost:3000
NEXT_PUBLIC_BACKEND_URL=http://localhost:5000
