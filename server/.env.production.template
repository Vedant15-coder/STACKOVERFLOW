# ========================================
# PRODUCTION ENVIRONMENT VARIABLES
# Copy to Railway Dashboard > Variables
# ========================================

# Server Configuration
PORT=5000
NODE_ENV=production

# MongoDB Atlas (PRODUCTION CLUSTER)
MONGODB_URL=mongodb+srv://username:password@cluster.mongodb.net/devquery-prod?retryWrites=true&w=majority

# JWT Secret (MUST be strong & random - generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))")
JWT_SECRET=your_super_secret_jwt_key_minimum_32_characters_long_random_string

# OTP Mode (CRITICAL: set to 'real' for production)
OTP_MODE=real

# Email Configuration (for OTP emails)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-specific-password
EMAIL_FROM=DevQuery <noreply@devquery.com>

# SMS Configuration (for OTP SMS)
SMS_PROVIDER=twilio
SMS_API_KEY=your_twilio_api_key
SMS_ACCOUNT_SID=your_twilio_account_sid
SMS_AUTH_TOKEN=your_twilio_auth_token
SMS_SENDER_ID=+1234567890

# Hugging Face AI (for AI Assist feature)
HF_API_KEY=hf_your_huggingface_api_key_here

# Google Gemini AI (backup/alternative)
GEMINI_API_KEY=your_gemini_api_key_here

# Frontend URL (will be provided by Vercel after deployment)
FRONTEND_URL=https://your-app.vercel.app

# Razorpay (Mock for now, real keys when ready)
RAZORPAY_KEY_ID=mock_key_id
RAZORPAY_KEY_SECRET=mock_key_secret

# ========================================
# DEPLOYMENT INSTRUCTIONS
# ========================================
# 1. Create Railway project
# 2. Add these variables in Railway dashboard
# 3. Replace all placeholder values
# 4. Ensure MongoDB Atlas IP whitelist includes Railway IPs (0.0.0.0/0 for simplicity)
# 5. Deploy backend
# 6. Copy Railway URL to frontend NEXT_PUBLIC_BACKEND_URL
